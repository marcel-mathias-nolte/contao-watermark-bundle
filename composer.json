{
    "name": "marcel-mathias-nolte/contao-watermark-bundle",
    "type": "contao-bundle",
    "description": "Add watermarks to resized frontend images",
    "homepage": "https://github.com/marcel-mathias-nolte",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Leo Feyer",
            "homepage": "https://github.com/leofeyer"
        },
        {
            "name": "Contao Community",
            "homepage": "https://contao.org/contributors"
        },
        {
            "name": "Marcel Mathias Nolte",
            "homepage": "https://github.com/marcel-mathias-nolte"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "^4.10",
        "contao-community-alliance/composer-plugin": "^2.4.0 || 3.*"
    },
    "require-dev": {
        "doctrine/doctrine-cache-bundle": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.12",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message-factory": "^1.0.2"
    },
    "extra": {
        "contao-manager-plugin": "MarcelMathiasNolte\\WatermarkBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "MarcelMathiasNolte\\WatermarkBundle\\": "src/"
        }
    },
    "support": {
        "issues": "https://github.com/marcel-mathias-nolte/contao-watermark-bundle/issues",
        "source": "https://github.com/marcel-mathias-nolte/contao-watermark-bundle"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao-community-alliance/composer-plugin": true
        }
    }
}
